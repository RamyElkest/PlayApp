{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "jsx": "preserve",
        "outDir": "./dist"
    },
    "filesGlob": [
        "!node_modules/**",
        "!typings/**",
        "!definitions/**",
        "./config/settings.js",
        "src/app.d.ts",
        "src/server/app.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "oldtest/*.ts"
    ],
    "files": [
        "./config/settings.js",
        "src/app.d.ts",
        "src/server/app.ts",
        "src/client/networkLayer.ts",
        "src/client/pushMessagesStore.ts",
        "src/init/index.android.ts",
        "src/init/index.ios.ts",
        "src/init/index.web.ts",
        "src/server/config/logger.ts",
        "src/server/controllers/Graphql.ts",
        "src/server/controllers/index.ts",
        "src/server/controllers/IsomorphicRender.ts",
        "src/server/controllers/Message.ts",
        "src/server/controllers/User.ts",
        "src/server/lib/authorization.ts",
        "src/server/lib/util.ts",
        "src/server/models/index.ts",
        "src/server/models/Message.ts",
        "src/server/models/User.ts",
        "src/server/schema/mainSchema.ts",
        "src/shared/routes.ts",
        "src/client/mutations/createMessage.tsx",
        "src/components/App/AppRender.native.tsx",
        "src/components/App/AppRender.tsx",
        "src/components/App/index.tsx",
        "src/components/Chat/ChatRender.native.tsx",
        "src/components/Chat/ChatRender.tsx",
        "src/components/Chat/index.tsx",
        "src/components/Login/index.tsx",
        "src/components/Login/LoginRender.native.tsx",
        "src/components/Login/LoginRender.tsx",
        "src/components/MainLayout/index.tsx",
        "src/components/MainLayout/MainLayoutRender.native.tsx",
        "src/components/MainLayout/MainLayoutRender.tsx",
        "src/components/SignUp/index.tsx",
        "src/components/SignUp/SignUpRender.native.tsx",
        "src/components/SignUp/SignUpRender.tsx",
        "src/native/actions.tsx",
        "src/native/reducer.tsx",
        "src/shared/queries.tsx"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": true
    }
}
